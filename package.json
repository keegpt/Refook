{
  "name": "@keegpt/refook",
  "version": "0.1.0",
  "description": "Use hooks outside react components!",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keegpt/refook.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^13.7.4",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.2"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "keywords": [
    "react",
    "hooks",
    "refs"
  ],
  "author": "keegpt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/keegpt/refook/issues"
  },
  "homepage": "https://github.com/keegpt/refook#readme",
  "publishConfig": {
    "access": "public"
  }
}
